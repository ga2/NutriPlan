<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_mainactivity_title" parent="android:Widget.TextView">
        <item name="android:textSize">40sp</item>
        <item name="color">@color/primaryColor</item>
    </style>

    <style name="style_mainactivity_subtitle" parent="style_mainactivity_title">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="style_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/primaryDarkColor</item>
        <item name="color">@color/primaryDarkColor</item>
        <item name="backgroundColor">@color/primaryDarkColor</item>
        <item name="tint">@color/primaryDarkColor</item>
    </style>

    <style name="style_nodata" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/dim_margin_normal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorIconsText</item>
        <item name="android:textSize">@dimen/dim_textView_nodata_textSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_nodata_details" parent="style_nodata">
        <item name="android:textSize">@dimen/dim_textView_nodatadetails_textSize</item>
    </style>



    <style name="style_activitycalc_tabs">
        <item name="color">@color/white</item>
        <item name="background">@color/primaryLightColor</item>
    </style>

    <style name="style_form_label">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_form_multiline" parent="android:Widget.EditText">
        <item name="android:lines">4</item>
    </style>

    <style name="style_textView_form_options">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_activityaddpatient_textView_surveysectiontitle">
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="color">@color/primaryDarkColor</item>
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">@color/primaryDarkColor</item>
    </style>

    <style name="style_activityaddpatient_textView_surveysectionsubtitle">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="color">@color/primaryColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:color">@color/primaryColor</item>
        <item name="android:layout_marginLeft">@dimen/dim_margin_small</item>
    </style>

    <style name="style_activityaddpatient_recyclerView_textView_time">
        <item name="android:color">@color/primaryColor</item>
    </style>

    <style name="style_activityappointments_textView_day">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_activityappointments_calendarView_daySelected">
        <item name="android:textColor">@color/mcv_text_date_light</item>
    </style>

    <style name="style_row_text">
        <item name="android:textSize">@dimen/row_text_size</item>
    </style>

    <style name="style_text_report_label">
        <item name="android:textSize">18sp</item>
        <item name="color">@color/light_grey</item>
    </style>

    <style name="style_text_report">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="color">@color/dark_grey</item>
    </style>

    <!-- START ACTIVITY MENU -->
    <style name="style_mainactivity_card" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/activitymenu_cardView_card_height</item>
        <item name="elevation">4dp</item>
        <item name="android:layout_marginStart">@dimen/dim_margin_normal</item>
        <item name="android:layout_marginEnd">@dimen/dim_margin_normal</item>
    </style>

    <style name="style_mainactivity_card_imageView">
        <item name="android:layout_width">@dimen/activitymenu_imageView_card</item>
        <item name="android:layout_height">@dimen/activitymenu_imageView_card</item>
    </style>

    <style name="style_mainactivity_card_textView">
        <item name="android:gravity">center_horizontal</item>
    </style>
    <!-- END ACTIVITY MENU -->

    <!-- START MAIN ACTIVITY -->
    <style name="style_mainactivity_logo">
        <item name="android:layout_width">@dimen/mainactivity_imageView_logo_width</item>
        <item name="android:layout_height">@dimen/mainactivity_imageView_logo_height</item>
    </style>
    <!-- END MAIN ACTIVITY -->

    <!-- START INDICES CALCULATORS ACTIVITY -->
    <style name="style_activitycalc_imageView_scale">
        <item name="android:layout_width">@dimen/activitycalc_imageView_scale</item>
        <item name="android:layout_height">@dimen/activitycalc_imageView_scale</item>
    </style>
    <style name="style_activitycalc_textView">
        <item name="android:layout_marginTop">@dimen/activitycalc_textView_marginTop</item>
        <item name="android:textSize">@dimen/activitycalc_textView_textSize</item>
    </style>
    <!-- END INDICES CALCULATORS ACTIVITY -->

</resources>