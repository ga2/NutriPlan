<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/rowvisits_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dim_margin_high"
            android:orientation="horizontal"
            android:outlineProvider="bounds"
            android:padding="@dimen/dim_margin_small">

            <LinearLayout
                android:id="@+id/rowvisits_linearLayout_nameBdate_container"
                style="@style/style_row_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_margin_small"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rowvisits_textView_visitofthe"
                    style="@style/style_row_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dim_margin_normal"
                    android:layout_marginEnd="@dimen/dim_margin_normal"
                    android:gravity="center"
                    android:text="@string/activitypatientaccount_string_visit_ofthedate"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/rowVisits_textView_visitdate"
                    style="@style/style_row_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLength="32"
                    android:text="TextView"
                    android:textColor="@color/blue_map"
                    android:textSize="22sp" />
            </LinearLayout>


            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>